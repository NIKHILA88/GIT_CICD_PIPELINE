import os, json


path_to_json = '/tmp/json/'

for file_name in [file for file in os.listdir(path_to_json) if file.endswith('.json')]:
  with open(path_to_json + file_name) as json_file:
    dict  = open('json_file', "w+")
    json_file.write(json.dumps(dict))
    json_file.close()

print (dict)
